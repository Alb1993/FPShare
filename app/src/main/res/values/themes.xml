<resources>
    <!-- Tema de app base -->
    <style name="Theme.Fpshare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Colores principales (light) -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Barra superior -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Varios -->
        <item name="android:textViewStyle">@style/Widget.FpShare.TextView.TextoNegro</item>
        <item name="textInputStyle">@style/Widget.FpShare.TextImputLayaout</item>
        <item name="materialButtonStyle">@style/Widget.FpShare.Button</item>
        <item name="android:spinnerStyle">@style/Widget.FpShare.Spinner</item>

    </style>
    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.Fpshare">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>