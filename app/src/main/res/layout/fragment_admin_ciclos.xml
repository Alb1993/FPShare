<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FragmentAdminCiclos">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Tags">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ciclos"
            android:layout_width="@dimen/size_300"
            android:layout_height="@dimen/size_300"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/size_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".Ciclo">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCiclos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_tag" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button_add_ciclo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/add_cicle"
            app:layout_constraintStart_toStartOf="@+id/layout_ciclos"
            app:layout_constraintTop_toBottomOf="@+id/layout_ciclos" />

        <Button
            android:id="@+id/btnEditCicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/edit_cicle"
            app:layout_constraintEnd_toEndOf="@+id/layout_ciclos"
            app:layout_constraintTop_toBottomOf="@+id/layout_ciclos" />

        <Button
            android:id="@+id/btnSeeModules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/see_modules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_add_ciclo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>