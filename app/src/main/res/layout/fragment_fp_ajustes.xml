<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FPAjustes">

    <TextView
        android:id="@+id/txt_ajustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/ajustes"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ajustes" />

    <RadioGroup
        android:id="@+id/rd_idioma"
        android:layout_width="141dp"
        android:layout_height="163dp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="162dp">

        <RadioButton
            android:id="@+id/rd_spain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spanish" />

        <RadioButton
            android:id="@+id/rd_catalan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catalan" />

        <RadioButton
            android:id="@+id/rd_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English" />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_aspect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aspecto"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="341dp" />

    <RadioGroup
        android:layout_width="151dp"
        android:layout_height="171dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="392dp">

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RadioButton" />
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="32dp"
        android:text="@string/btn_guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>