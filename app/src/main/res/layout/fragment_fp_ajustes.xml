<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fp_ajustes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FPAjustes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_idioma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginTop="@dimen/size_64"
            android:text="@string/language"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_aspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginTop="@dimen/size_45"
            android:text="@string/theme"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rd_idioma" />

        <RadioGroup
            android:id="@+id/rd_idioma"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_150"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginTop="@dimen/size_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_idioma">

            <RadioButton
                android:id="@+id/rd_spain"
                style="@style/Widget.FpShare.RadioButton"
                android:text="@string/spanish" />

            <RadioButton
                android:id="@+id/rd_catalan"
                style="@style/Widget.FpShare.RadioButton"
                android:text="@string/catalan" />

            <RadioButton
                android:id="@+id/rd_english"
                style="@style/Widget.FpShare.RadioButton"
                android:checked="true"
                android:text="@string/english" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_aspect"
            android:layout_width="@dimen/size_100"
            android:layout_height="@dimen/size_150"
            android:layout_marginStart="@dimen/size_50"
            android:layout_marginTop="@dimen/size_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_aspect">

            <RadioButton
                android:id="@+id/rd_default"
                style="@style/Widget.FpShare.RadioButton"
                android:checked="true"
                android:text="@string/system" />

            <RadioButton
                android:id="@+id/rd_light"
                style="@style/Widget.FpShare.RadioButton"
                android:text="@string/light" />

            <RadioButton
                android:id="@+id/rd_dark"
                style="@style/Widget.FpShare.RadioButton"
                android:text="@string/dark" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_submit"
            style="@style/Widget.FpShare.Button"
            android:layout_marginBottom="@dimen/size_20"
            android:text="@string/btn_guardar"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>