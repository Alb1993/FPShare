<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editar_Publicacion">

    <TextView
        android:id="@+id/txtEditarPublicacion"
        style="@style/Widget.FpShare.TextView.TextoNegro"
        android:layout_width="@dimen/WidthTitulo"
        android:layout_height="@dimen/HeightTitulo"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:text="@string/txtEdit"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/perfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditarPublicacion" />

    <TextView
        android:id="@+id/txtUser"
        style="@style/Widget.FpShare.TextView.TextoNegro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:text="@string/txtUserEdit"
        app:layout_constraintStart_toEndOf="@+id/imagePerfil"
        app:layout_constraintTop_toBottomOf="@+id/txtEditarPublicacion" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUser">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txtPublicationTitle" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/txtPublicationDescription" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/TextLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/txtLinkMarginStart"
        android:layout_marginTop="@dimen/txtLinkMarginTop"
        android:text="@string/txtLink"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        />

    <Spinner
        android:id="@+id/spinnerUF"
        android:layout_width="@dimen/spinnerUFWidth"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spinnerUFMarginStart"
        android:layout_marginTop="@dimen/spinnerUFMarginTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextLink"
        />

    <Spinner
        android:id="@+id/spinnerCiclo"
        android:layout_width="@dimen/spinnerCicloWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spinnerCicloMarginTop"
        app:layout_constraintStart_toEndOf="@+id/spinnerUF"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        />

    <Spinner
        android:id="@+id/spinnerModulo"
        android:layout_width="@dimen/spinnerModuloWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spinnerModuloMarginTop"
        app:layout_constraintStart_toEndOf="@+id/spinnerCiclo"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="@dimen/btnSaveWidth"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnSaveMarginStart"
        android:layout_marginTop="@dimen/btnSaveMarginTop"
        android:text="@string/txtSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCiclo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>