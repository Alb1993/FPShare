<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordRecovery">

    <ImageView
        android:id="@+id/logo_recovery_password"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_marginStart="@dimen/logo_margin_start"
        android:layout_marginTop="@dimen/logo_margin_top"
        android:layout_marginEnd="@dimen/logo_margin_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_fpshare" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/imput_email_recovery_pssword"
        android:layout_width="@dimen/width_text_imput_layaout"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:hint="@string/email_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_recovery_password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_imput_edittext" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/email_textview_login"
        style="@style/Widget.FpShare.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/email_login"
        app:layout_constraintBottom_toTopOf="@+id/imput_email_recovery_pssword"
        app:layout_constraintStart_toStartOf="@+id/imput_email_recovery_pssword"
        app:layout_constraintTop_toBottomOf="@+id/logo_recovery_password"/>

    <Button
        android:id="@+id/button_singin_login"
        style="@style/Widget.FpShare.Button"
        android:layout_width="@dimen/width_button"
        android:layout_height="@dimen/height_button"
        android:layout_marginTop="32dp"
        android:text="@string/recovery_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imput_email_recovery_pssword" />

</androidx.constraintlayout.widget.ConstraintLayout>