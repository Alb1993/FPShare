<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_previa_publicacion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtPublicacion"
            style="@style/Widget.FpShare.TextView2"
            android:layout_width="299dp"
            android:layout_height="69dp"
            android:layout_marginStart="50dp"
            android:text="Publicacion"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="115dp" />

        <TextView
            android:id="@+id/txtProfile"
            style="@style/Widget.FpShare.TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Carlos Trujillo"
            app:layout_constraintStart_toEndOf="@+id/profileIcon"
            tools:layout_editor_absoluteY="242dp" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/perfil"
            app:layout_constraintStart_toStartOf="@+id/txtPublicacion"
            app:layout_constraintTop_toBottomOf="@+id/txtPublicacion" />

        <TextView
            android:id="@+id/txtDesc"
            style="@style/Widget.FpShare.TextView2"
            android:layout_width="300"
            android:layout_height="150"
            android:layout_marginTop="30dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/txtTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

        <TextView
            android:id="@+id/textLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Enlace"
            app:layout_constraintStart_toStartOf="@+id/Label1"
            app:layout_constraintTop_toBottomOf="@+id/Label2" />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/Widget.FpShare.TextView2"
            android:layout_width="300"
            android:layout_height="69"
            android:layout_marginTop="40dp"
            android:text="Resumen UF1 Base de Datos"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/profileIcon"
            app:layout_constraintTop_toBottomOf="@+id/txtProfile" />

        <Spinner
            android:id="@+id/Label1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            tools:layout_editor_absoluteX="50dp" />

        <Spinner
            android:id="@+id/Label2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            tools:layout_editor_absoluteX="150dp" />

        <Spinner
            android:id="@+id/Label3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc"
            tools:layout_editor_absoluteX="249dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>