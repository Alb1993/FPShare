<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="8dp"
android:layout_marginStart="8dp"
android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="406dp"
        android:layout_height="325dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/perfil" />

        <TextView
            android:id="@+id/txtProf"
            android:layout_width="212dp"
            android:layout_height="27dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="txtProf"
            app:layout_constraintStart_toEndOf="@+id/imgIcon"
            app:layout_constraintTop_toTopOf="@+id/imgIcon" />

        <TextView
            android:id="@+id/txtDescr"
            android:layout_width="285dp"
            android:layout_height="136dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="90dp"
            android:text="txtDescr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon" />

        <TextView
            android:id="@+id/textLink"
            android:layout_width="281dp"
            android:layout_height="34dp"
            android:layout_marginTop="10dp"
            android:text="Link"
            app:layout_constraintStart_toStartOf="@+id/txtDescr"
            app:layout_constraintTop_toBottomOf="@+id/txtDescr" />

        <TextView
            android:id="@+id/txtPubliTitle"
            android:layout_width="292dp"
            android:layout_height="43dp"
            android:layout_marginTop="25dp"
            android:text="txtPubliTitle"
            app:layout_constraintEnd_toEndOf="@+id/txtDescr"
            app:layout_constraintStart_toStartOf="@+id/imgIcon"
            app:layout_constraintTop_toBottomOf="@+id/txtProf" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>