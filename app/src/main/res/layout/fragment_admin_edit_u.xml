<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.FragmentAdminEditUF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputMainEditNameUF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEditNameUF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_of_uf" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSaveEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_50"
            android:text="@string/save_changes"
            app:layout_constraintStart_toStartOf="@+id/inputMainEditNameUF"
            app:layout_constraintTop_toBottomOf="@+id/inputMainEditNameUF" />

        <Button
            android:id="@+id/btnDeleteUF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_50"
            android:text="@string/delete_uf"
            app:layout_constraintEnd_toEndOf="@+id/inputMainEditNameUF"
            app:layout_constraintTop_toBottomOf="@+id/inputMainEditNameUF" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>