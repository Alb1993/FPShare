<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CrearUF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/crearUF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputIDufMain"
            android:layout_width="800dp"
            android:layout_height="@dimen/size_100"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputIDuf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_id_uf"
                android:inputType="textCapCharacters" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputNombreUfMain"
            android:layout_width="800dp"
            android:layout_height="@dimen/size_100"
            android:layout_marginStart="@dimen/size_20"
            android:layout_marginTop="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputIDufMain">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNombreUf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/name_of_uf"
                android:inputType="textCapSentences" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnAddUf"
            style="@style/Widget.FpShare.Button"
            android:layout_marginTop="@dimen/size_50"
            android:text="@string/add_uf"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNombreUfMain" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>